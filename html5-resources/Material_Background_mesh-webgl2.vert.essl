#version 300 es

uniform mat3 N;
uniform mat4 W;
uniform mat4 WVP;
uniform vec3 eye;
uniform mat4 LWVP;

in vec4 pos;
out vec3 wnormal;
in vec2 nor;
out vec3 eyeDir;
out vec4 lightPosition;

void main()
{
    vec4 spos = vec4(pos.xyz, 1.0);
    wnormal = normalize(N * vec3(nor, pos.w));
    vec3 wposition = vec4(W * spos).xyz;
    gl_Position = WVP * spos;
    eyeDir = eye - wposition;
    lightPosition = LWVP * spos;
}

